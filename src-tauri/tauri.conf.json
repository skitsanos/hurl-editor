{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "yarn run build",
        "beforeDevCommand": "yarn run dev",
        "devPath": "http://localhost:8000",
        "distDir": "../dist"
    },
    "package": {
        "productName": "hurl-editor",
        "version": "1.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": true
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.skitsanos.apps.hurl-editor",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "width": 400,
                "height": 200,
                "decorations": false,
                "fullscreen": false,
                "url": "splashscreen.html",
                "label": "splashscreen",
                "center": true,
                "title": "Hurl Editor"
            },
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "Hurl Editor",
                "width": 800,
                "visible": false
            }
        ]
    }
}
